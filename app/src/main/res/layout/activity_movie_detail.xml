<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.popularmoviess1.MovieDetailActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    style="@style/PopularMoviesTheme">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/poster_detail_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="20dp"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/original_title_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="@string/original_title_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poster_detail_imageView"
        />

    <TextView
        android:id="@+id/original_title_textView"
        style="@style/DetailsTextViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/original_title_label_textView" />

    <TextView
        android:id="@+id/release_date_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/release_date_label"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_title_textView" />

    <TextView
        android:id="@+id/release_date_textView"
        style="@style/DetailsTextViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/release_date_label_textView" />

    <TextView
        android:id="@+id/vote_average_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/vote_average_label"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/release_date_textView" />

    <TextView
        android:id="@+id/vote_average_textView"
        style="@style/DetailsTextViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vote_average_label_textView" />

    <TextView
        android:id="@+id/synopsis_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vote_average_textView"
        android:text="@string/synopsis_label" />

    <TextView
        android:id="@+id/synopsis_textView"
        style="@style/DetailsSynopsisTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/synopsis_label_textView" />
</android.support.constraint.ConstraintLayout>
</ScrollView>